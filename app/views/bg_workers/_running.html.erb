<div id="running_list" class="list">
 <h3><%= _(%q{Running}) %></h3>

 <table class="sortable" id="running_table">
  <thead><tr>
    <th><%= _(%q{Name}) %></th>
    <th><%= _(%q{Priority}) %></th>
    <th><%= _(%q{Started At}) %></th>
    <th><%= _(%q{Locked At}) %></th>
    <th><%= _(%q{Locked By}) %></th>
    <th></th>
  </tr></thead>
  <tbody>

  <% @running.each_with_index do |row,idx| %>
    <tr class="<%= (idx % 2 == 1) ? 'odd' : 'even' %>">
     <td><%= row.name %></td>
     <td><%= row.priority %></td>
     <td><%= row.started_at.strftime('%Y-%m-%d %H:%M:%S') if row.started_at %></td>
     <td><%= row.locked_at.strftime('%Y-%m-%d %H:%M:%S') if row.locked_at %></td>
     <td><%= row.locked_by %></td>
 <td class="std_links">
   <%= link_to(image_tag('std/del.png', :title => _('Kill Task')),
        {:controller => :bg_workers, :action => :kill_task,  :id => row.id}, :confirm => _("Are you sure that you want to kill this task?"), :method => :post) %>
 </td></tr>
<% end %></tbody></table>

</div>
</div>
<div id="bg_workers_element"></div>

<span style="margin-right:10px">
<%= will_paginate(@running, :param_name => 'runs_page', :previous_label => image_tag('std/go_left.png', :title => _("Previous page")), :next_label => image_tag('std/go_right.png', :title => _("Next page"))) %>
</span><br /><br />
<%= _(%q{Thread status}) %>: <%= @thread ? _(@thread.status) : _('Not running') %>
<% if !@thread %><div class='warning'>
<b><%= _(%q{Scheduler thread not running!}) %></b><br />
<%= _(%q{This is normal if you are in development mode, but most background tasks won't execute.}) %>
</div><% end %><br />
<% if @pres_mode == :list_zoom %>
<a href="#" onclick="new Ajax.Updater('bg_workers_element', '<%= "/#{params[:lang]}" if params[:lang] %>/bg_workers/start_worker', {asynchronous:true, evalScripts:true}); return false;" title="<%= _(%q{Background Workers: starting worker.}) %>"><img src="/images/page_icons/resultset_next.png" alt="<%= _(%q{Start Worker}) %>" title="<%= _(%q{Start Worker}) %>" /> <%= _(%q{Start Worker}) %></a>
<% else %>
<a href="<%= "/#{params[:lang]}" if params[:lang] %>/bg_workers/start_worker" title="<%= _(%q{Background Workers: starting worker.}) %>"><img src="/images/page_icons/resultset_next.png" alt="<%= _(%q{Start Worker}) %>" title="<%= _(%q{Start Worker}) %>" /> <%= _(%q{Start Worker}) %></a>
<% end %>

