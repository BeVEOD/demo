  if (typeof(jQuery) != 'undefined') {
    if (!Cookies.enabled) {
      $("#no_cookies").css("display", "block"); 
    }
  } else {
    if (!Cookies.enabled) {
      $("no_cookies").setStyle({display: "block"}); 
    } 
  }

}
