<script src="/javascripts/cookies.min.js" type="text/javascript"></script>

<% @page_title = _("%{app} - Connection") % {:app => GSS[:app_name]} %>
<%= error_messages_for 'user' %>
<form action="<%= "/#{params[:lang]}" if params[:lang] %>/users/login/login_form" id="user_<%= @user.id || 0 %>_form" method="post">
<div>
  <img id="logo" src="/images/logo/logo_v3.png" alt="Faveod" title="Faveod" />
  <div class="center_elt">
    <span class="align">
     <label for="user_login"><%= _("Login: ") %>
      <%= text_field("user", "login") %> 
     </label>
    </span>
    <br />

    <span class="align">
     <label for="user_password"><%= _("Password: ") %>
      <%= password_field("user", "password") %>
     </label>
    </span>
    <br style="clear:both;" />  

    <span class="align">
      <input type="submit" value="<%= _(%q{Sign in}) %>" />
    </span>
  </div>
</div>

<div class="center_elt">
  <span class="align">
  <%= flash[:notice] %>
  <% if flash[:warning] %>
   <span style="color:red" id="warning"><%= flash[:warning] %></span>
  <% end %>
  <div id='no_cookies'>
    <img src="/images/parts/info_icon.gif" height="16" width="16" alt='Info' />
    <%= _(%q{Cookies have to be allowed to sign in.}) %>
  </div>
  </span>   

</div>
             
</form>
  
   
  
<script type="text/javascript">
