%><% if @results %>
<fieldset><legend><%= _(%q{Results}) %></legend>
<h3><%= _(%q{Summary}) %></h3>
<div class='notice'>
<%= _('Successfully imported %{ok}/%{tot}') % {:ok => @results[:successes], :tot => @results[:total]} unless @results[:successes] == 0 %>
<%= ', ' if @results[:successes] != 0 && @results[:errors] != 0 %>
<%= _('%{n} errors') % {:n => @results[:errors]} unless @results[:errors] == 0 %>
<%= content_tag(:p, @results[:msg]) if @results[:msg] %>
</div>

<% if @results[:error_list].any? %>
<h3><%= _(%q{Error report}) %></h3>
<table class="sortable"><% @results[:error_list].each do |row| next if row.blank? %><tr>
  <td><ul><%= row[:object].errors.full_messages.map{|err| content_tag(:li, err)}.join unless row[:object].blank? %></ul></td>
  <%= row[:data].map{|d| content_tag(:td, d)}.join if row[:data] %>
</tr><% end %></table>

<h3><%= _(%q{Error CSV}) %></h3>
<p class="help"><%= _(%q{You can save this text as CSV to fix the invalid records, then retry.}) %></p>
<textarea wrap="off" cols="80" rows="25" name="file[reupload]" id="file_reupload">
<%= @results[:report_csv] %>
</textarea>

<p class="help"><%= _(%q{Click 'reupload' to upload this CSV as the latest file}) %></p>
<input id="reupload" name="reupload" type="submit" value="reupload" />
<% end %>
</fieldset>
<% end %>

