
digraph G {
  fontsize = 14
  fontname = "Verdana"
  style = "filled";
  fillcolor = "white";
<% colors = %w(#D01F3C #356AA0 #C79810 #7FFFD4 #D2691E #A9A9A9 #BDB76B #DCDCDC #ADFF2F #F4A460 #F5DEB3) %><%#  shape = "tab"; %>

  node [
    shape="plaintext"
    style = "filled"
    fontname = "Verdana"
    fontsize = 9
    fillcolor = "#f1ffe8"
  ]

<% @gems.each do |g| %>
        "<%= g.name %>" [
           label = "<%= g.name %> (<%= g.version %>)"
           URL = "<%= g.homepage %>"
        ]
   <% g.dependencies.reject{|d| d.type == :development }.each { |d| %>
     "<%= g.name %>" -> "<%= d.name %>";
   <% } %>
<% end %>
}
