%><div class="row">
  <div class="span12">
    <% if @locales.empty? %>
      <h2>Current localizations files</h2>
      <hr>

      <p>There's currently no locales.</p>
    <% else %>
      <% unless params.has_key?(:filter) || params[:filter] == "locales" %>
        <h2>Current localizations files</h2>
        <hr>

        <table class="table">
          <thead>
            <tr>
              <th>Locale</th>
              <th class="span4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @locales.each do |locale| %>
              <tr>
                <td><%= locale %></td>
                <td>
                  <%= link_to "<i class=\"icon-edit\"></i> Edit".html_safe, "/translations?filter=locale&locale=#{locale}", :class => "btn" %>
                  <%= link_to "<i class=\"icon-download icon-white\"></i> Download".html_safe, "/translations/get_po/#{locale}", :class => "btn btn-primary" %>
                  <%= link_to "<i class=\"icon-trash icon-white\"></i> Remove".html_safe, "/translations/delete_po/#{locale}", :method => :delete, :class => "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h2>Edit localization file</h2>
        <hr>

        <ul id="locales-tabs" class="nav nav-tabs">
          <li class="active"><a href="#">All</a></li>
          <li><a href="#" data-fuzzy="false">Non fuzzy</a></li>
          <li><a href="#" data-fuzzy="true">Fuzzy</a></li>
          <!--<li><a href="#" data-obsolete="true">Obsolete</a></li>-->
        </ul>

        <table class="table">
          <thead>
            <tr>
              <th class="span5">MSGID</th>
              <th class="span5">Translation</th>
              <th class="span2">Actions</th>
            </tr>
          </thead>
          <tbody id="locales"></tbody>
        </table>
      <% end %>
    <% end %>
    
    <hr>
    
    <p>
      <a href="/translations/upload_po" class="btn"><i class="icon-upload"></i> Upload a localization file</a>
      <button type="button" class="btn generate_pos"><i class="icon-refresh"></i> Update localization files</button>
      This could be very long... (5 to 20 minutes)
    </p>
  </div>
</div>
