%><div class="row">
  <div class="span12">
    <h1>Upload localization file</h1>
    <hr>
    <%= form_tag("/translations/upload_po", :multipart => true, :class => "form-horizontal") do %>
      <div class="control-group <%= 'error' if @errors && @errors[:locale] %>">
        <label for="locale" class="control-label">Locale</label>
        <div class="controls">
          <select id="locale" name="locale">
            <option value=""></option>
            <% @locales.each do |locale| %>
              <option value="<%= locale %>"><%= locale %></option>
            <% end %>
          </select>
          <% if @errors && @errors[:locale] %>
            <span class="help-inline"><%= @errors[:locale] %></span>
          <% end %>
        </div>
      </div>

      <div class="control-group <%= 'error' if @errors && @errors[:locale_file] %>">
        <label for="locale_file" class="control-label">File</label>
        <div class="controls">
          <input id="locale_file" name="locale_file" type="file">
          <% if @errors && @errors[:locale_file] %>
            <span class="help-inline"><%= @errors[:locale_file] %></span>
          <% end %>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Upload</button>
        <%= link_to "Cancel", "/translations", :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>

