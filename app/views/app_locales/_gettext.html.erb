<% @app_locales.each do |f, a| %>
<table id="translations" spellcheck="true">
  <tr>
    <th><%= page_entries_info(a, :entry_name => 'translations') %></th>
    <td>Pages: <%= will_paginate(a,
	   :previous_label => image_tag('std/go_left.png', :title => _("Previous page")),
           :next_label => image_tag('std/go_right.png', :title => _("Next page"))) %>
    </td>
  </tr>
  <tr><th><%= _(%q{File:}) %></th><th style='text-align: center'><%=h f %></th></tr>
  <tr>
    <th>MSGID</th>
    <th style='text-align: left'><%= _(%q{Translation}) %></th>
    <% if @gettext_obsol %><td><%= link_to(_("Delete Obsolete"), :overwrite_params => {:tab => "obsol", :page => "-1", :per_page => "-1"}) %></td><% end %>
  </tr>
<% @app_locales[f].each do |w|
  msg_name = %Q{msgid[#{@md5[f]}][#{@md5[w[0]]}]}
  msg_id = %Q{msgid_#{@md5[f]}_#{@md5[w[0]]}} %>
  <tr class="<%= cycle('odd', 'even') %>">
    <% msgid_plural = w[0].split("\000")
        msgstr_plural = w[1].split("\000") %>
    <th>
        <% (msgid_plural.size).times do |e| %>
          <pre><%=h msgid_plural[e] %></pre><br />
        <% end %>
    </th>
    <td>
      <% (msgid_plural.size).times do |e| %>
        <% if w[0] =~ /\n/ %>
           <textarea style="width: 480px" id="<%= msg_id %>_<%= e %>" name="<%= msg_name %>[<%= e %>]"><%=h msgstr_plural[e] %></textarea>
        <% else %>
           <input style="width: 480px" id="<%= msg_id %>_<%= e %>" name="<%= msg_name %>[<%= e %>]" type="text" value="<%=h msgstr_plural[e] %>" />
        <% end %>
      <% end %>
    </td>
<% if (!@gettext_obsol && !AppLocale.working?) && !(@gettext_untrans && AppLocale.working?('auto_translate')) %>
    <% with_to_send = "'#{msg_name}[0]=' + encodeURIComponent($F('#{msg_id}_0'))" %>
    <% (msgid_plural.size - 1).times do |e| %>
      <% with_to_send += "+ '&#{msg_name}[#{e + 1}]=' + encodeURIComponent($F('#{msg_id}_#{e + 1}'))" %>
    <% end %>
    <td>&nbsp;<%= link_to_remote('Submit', :url => {:action => :submit, :id => params[:id], :tab => params[:tab]}, :with => with_to_send)%>
	 | <%= link_to_remote('Auto-translate', :url => {:action => :auto_translate, :id => params[:id]}, :with => with_to_send)%> </td>
<% else %>
    <td><div class="warning">
      <b><%= _(%q{Cannot launch tasks!}) %></b><br />
      <%= _("%{task} running in background") % {:task => _("Translator")} %>
    </div></td>
<% end %>
  </tr>
  <% end %>
</table>
<% end %>

